{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "jsx": "react",
    "module": "es2020",
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.scss$"
        }
      }
    ]
  },
  "include": ["src/**/*", "webpack.config.js"],
  "exclude": ["node_modules"]
}
